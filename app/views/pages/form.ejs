<!-- <!DOCTYPE html> -->
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/stylesheet.css" />
    <title>Anamnese</title>
</head>
<body>
    <header>
        <h1>Anamnese</h1>
        <nav>
            <ul>
                <li><a href="/">Início</a></li>
                <li><a href="/about">Sobre</a></li>
                <li><a href="/form">Ficha</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <div>
<!-- Dados pessoais -->
            <form>
                <fieldset>
                    <legend>Dados pessoais </legend>

                    <div>
                        <label>Name: </label>
                        <input type="text" />

                        <label>Pronomes: </label>
                        <input type="text" />
                        
                        <label>Data de nascimento: </label>
                        <input type="date" />
                    </div>
                    <div>
                        <label>Endereço: </label>
                        <input type="text" />

                        <label>CEP: </label>
                        <input type="number" />
                    </div>
                    <div>
                        <label>Bairro: </label>
                        <input type="text" />

                        <label>Cidade: </label>
                        <input type="text" />

                        <label>Estado: </label>
                        <select required>
                            <option value="0"> -- selecione -- </option>
                            <% estados.map((item) => { %>
                            <option value="<%= item.id %>"><%= item.value %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label>Email: </label>
                        <input type="email" />

                        <label>Telefone: </label>
                        <input type="phone" />

                        <label>Profissão: </label>
                        <input type="text" />
                    </div>
                </fieldset>
            </form>
        </div>
<!-- Histórico de Saúde -->
        <div>
            <form>
                <fieldset>
                    <legend>Histórico de saúde </legend>
                    <div>
                        <div>
                            <span>Gravidez: </span>

                            <% gravidez.map((item) => { %>
                            <input type="radio" id="<%= item.id %>" name="gravidez" value="<%= item.id %>"/>
                            <label for="<%= item.id %>"><%= item.descricao %></label>
                            <% }) %>

                        </div>

                        <div>
                            <span>Amamentacão: </span>

                            <% amamentacao.map((item) => { %>
                            <input type="radio" id="<%= item.id %>" name="amamentacao" value="<%= item.id %>"/>
                            <label for="<%= item.id %>"><%= item.descricao %></label>
                            <% }) %>
                        </div>
                        <div>
                            <span>Alergias: </span>

                            <% alergias.map((item) => { %>
                            <input type="radio" id="<%= item.id %>" name="alergias" value="<%= item.id %>"/>
                            <label for="<%= item.id %>"><%= item.descricao %></label>
                            <% }) %>
                            <label for="quaisAlergias">Quais: </label>
                            <input type="text" id="quaisAlergias" />
                            
                        </div>
                        <div>
                            <span>Doenças infantis: </span>

                            <% doencasInfantis.map((item) => { %>
                            <input type="radio" id="<%= item.id %>" name="doencasInfantis" value="<%= item.id %>"/>
                            <label for="<%= item.id %>"><%= item.descricao %></label>
                            <% }) %>
                            <label for="quaisDoençasInfantis">Quais: </label>
                            <input type="text" id="quaisDoencasInfantis" />
                        </div>
                        <div>
                            <span>Cirurgias recentes: </span>

                            <% cirurgiasRecentes.map((item) => { %>
                            <input type="radio" id="<%= item.id %>" name="cirurgiasRecentes" value="<%= item.id %>"/>
                            <label for="<%= item.id %>"><%= item.descricao %></label>
                            <% }) %>
                            <label for="quaisCirurgiasRecentes">Quais: </label>
                            <input type="text" id="quaisCirurgiasRecentes" />
                        </div>
                    </div>
                    
                    <h3>Patologias</h3>

                    <div class="linha">
                        
                        <div class="patologias1">
                            <input type="checkbox" id="queloide" />
                            <label for="queloide">Queloide</label><br>

                            <input type="checkbox" id="cardiopatia" />
                            <label for="cardiopatia">Cardiopatia</label><br>

                            <input type="checkbox" id="epilepsia" />
                            <label for="epilepsia">Epilepsia</label><br>

                            <input type="checkbox" id="hipertensão" />
                            <label for="hipertensão">Hipertensão</label><br>

                            <input type="checkbox" id="problemaRenal" />
                            <label for="problemaRenal">Problema renal</label><br>
                        </div>

                        <div class="patologias2">
                            <input type="checkbox" id="problemaDermatológico" />
                            <label for="problemaDermatológico">Problema dermatológico</label><br>

                            <input type="checkbox" id="problemaRespiratório" />
                            <label for="problemaRespiratório">Problema respiratório</label><br>

                            <input type="checkbox" id="problemaCirculatório" />
                            <label for="problemaCirculatório">Problema circulatório</label><br>

                            <input type="checkbox" id="hemofilia" />
                            <label for="hemofilia">Hemofilia</label><br>

                            <input type="checkbox" id="doençasAutoimunes" />
                            <label for="doençasAutoimunes">Doenças autoimunes</label><br>
                        </div>

                        <div class="patologias3">
                            <input type="checkbox" id="câncer" />
                            <label for="câncer">Câncer</label><br>

                            <input type="checkbox" id="marca-passo" />
                            <label for="marca-passo">Marca-passo</label><br>

                            <input type="checkbox" id="diabetes" />
                            <label for="diabetes">Diabetes</label><br>

                            <input type="checkbox" id="hepatite" />
                            <label for="hepatite">Hepatite</label><br>

                            <input type="checkbox" id="anemia" />
                            <label for="anemia">Anemia</label><br>
                        </div>

                        <!-- <label for=""></label>
                        <input type="checkbox" id="" /> -->
                    </div>
                </fieldset>
            </form>
        </div>

<!-- Hábitos -->
        <div>
            <form>
                <fieldset>
                    <legend>Hábitos diários </legend>
                    <div>
                        <span>Fumo: </span>

                        <% fumo.map((item) => { %>
                        <input type="radio" id="<%= item.id %>" name="fumo" value="<%= item.id %>"/>
                        <label for="<%= item.id %>"><%= item.descricao %></label>
                        <% }) %>
                        <label for="frequenciaFumo">Frequência: </label>
                        <input type="text" id="frequenciaFumo" />
                    </div>
                    <div>
                        <span>Álcool: </span>

                        <% alcool.map((item) => { %>
                        <input type="radio" id="<%= item.id %>" name="alcool" value="<%= item.id %>"/>
                        <label for="<%= item.id %>"><%= item.descricao %></label>
                        <% }) %>
                        <label for="frequenciaAlcool">Frequência: </label>
                        <input type="text" id="frequenciaAlcool" />
                    </div>
                    <div>
                        <span>Medicamentos: </span>

                        <% medicamentos.map((item) => { %>
                        <input type="radio" id="<%= item.id %>" name="medicamentos" value="<%= item.id %>"/>
                        <label for="<%= item.id %>"><%= item.descricao %></label>
                        <% }) %>
                        <label for="quaisMedicamentos">Medicamentos: </label>
                        <input type="text" id="quaisMedicamentos" />
                    </div>
                    <div>
                        <span>Cosméticos na área a ser tratada: </span>

                        <% cosmeticos.map((item) => { %>
                        <input type="radio" id="<%= item.id %>" name="cosmeticos" value="<%= item.id %>"/>
                        <label for="<%= item.id %>"><%= item.descricao %></label>
                        <% }) %>
                        <label for="quaisCosmeticos">Quais: </label>
                        <input type="text" id="quaisCosmeticos" />
                    </div>
                    <div>
                        <span>Exposição solar: </span>

                        <% exposicaoSolar.map((item) => { %>
                        <input type="radio" id="<%= item.id %>" name="exposicaoSolar" value="<%= item.id %>"/>
                        <label for="<%= item.id %>"><%= item.descricao %></label>
                        <% }) %>
                        <label for="frequenciaExposicaoSolar">Frequência: </label>
                        <input type="text" id="frequenciaExposicaoSolar" />
                    </div>
                    <div>
                        <span>Atividade Física: </span>

                        <% atividadeFisica.map((item) => { %>
                        <input type="radio" id="<%= item.id %>" name="atividadeFisica" value="<%= item.id %>"/>
                        <label for="<%= item.id %>"><%= item.descricao %></label>
                        <% }) %>
                        <label for="frequenciaAtividadeFisica">Quais: </label>
                        <input type="text" id="frequenciaAtividadeFisica" />
                    </div>
                </fieldset>
            </form>
        </div>

